---
import ArchitectureCard from './ArchitectureCard.astro';
const architectureTags = ['Idempotency', 'Webhooks', 'Queues', 'Observability'];
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
---

<section class="hero-shell">
  <div>
    <p class="section-label">Senior Odoo Integration Engineer</p>
    <h1>Senior Odoo Integration Engineer</h1>
    <p>I design and maintain Odoo integrations that connect ERP, CRM, commerce, and analytics systems in production.</p>
    <p class="hero-philosophy">
      I build integrations that fail safely, recover automatically, and scale predictably.
    </p>
    <div class="hero-actions">
      <a class="btn btn-primary" href={`${base}docs/`}>Read Docs</a>
      <a class="btn btn-ghost" href="#integrations">View Integrations</a>
    </div>
    <div class="chip-row" aria-label="Architecture focus tags">
      {architectureTags.map((tag) => <span class="chip">{tag}</span>)}
    </div>
  </div>
  <ArchitectureCard />
</section>
